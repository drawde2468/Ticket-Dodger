  <a class="navbar-brand" href="/dashboard">
    <img src="images/ticket_dodger_icon.png" width="30" height="30" class="d-inline-block align-top bg-light rounded-circle"
      alt=""> Ticket Dodger
  </a>
  <span class="navbar-brand mb-0 h1"></span>
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link active bg-danger shadow" href="/logout">Log Out</a>
    </li>
  </ul>
</nav>

<div id="form-container">
  <form class="form-signin bg-light rounded shadow" action="/parking" method="POST">
    <h1 class="h3 mb-3 font-weight-normal text-center">Add Parking</h1>
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="time">Hours:</label>
        <input type="number" class="form-control" min="0" name="time" oninput="this.value = Math.abs(this.value)">
      </div>
      <div class="form-group col-md-12">
        <label for="rate">Rate:</label>
        <input type="number" class="form-control" step="0.01" min="0" oninput="this.value = Math.abs(this.value)" name="rate">
      </div>
      <div class="form-group col-md-12">
        <label for="frequency">Frequency:</label>
        <div id="frequency-box">
          <select class="custom-select col-md-12" id="frequency-box" name="frequency">
            <option value="Once">Once</option>
            <option value="Daily">Daily</option>
            <option value="Weekly">Weekly</option>
          </select>
        </div>
      </div>

      <div class="form-group col-md-6 date-hide">
        <label for="start">Start Date:</label>
        <input type="date" class="form-control" id="start" name="start">
      </div>
      <div class="form-group col-md-6 date-hide">
        <label for="lon">End Date:</label>
        <input type="date" class="form-control" id="end" name="end">
      </div>
    </div>

    {{#if message}}
    <div class="error-message">{{ message }}</div>
    {{/if}}
    <button type="submit" class="btn btn-primary">Enter</button>
  </form>
</div>
