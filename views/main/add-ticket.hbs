<link rel='stylesheet' href='/stylesheets/forms.css' />

<nav class="navbar navbar-dark bg-dark">
  <a class="navbar-brand" href="/dashboard">
    <img src="images/ticket_dodger_icon.png" width="30" height="30" class="d-inline-block align-top bg-light rounded-circle"
      alt=""> Ticket Dodger
  </a>
  <span class="navbar-brand mb-0 h1"></span>
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link active bg-danger shadow" href="/logout">Log Out</a>
    </li>
  </ul>
</nav>

<div id="form-container">
  <form class="form-signin bg-light rounded shadow" action="/add-ticket" method="POST">
      <h1 class="h3 mb-3 font-weight-normal text-center">Add Ticket</h1>
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="cost">Cost:</label>
        <input type="number" class="form-control" step="0.01" min="0" oninput="this.value = Math.abs(this.value)" name="cost">
      </div>
      <div class="form-group col-md-5">
        <label for="lat">Latitude:</label>
        <input type="number" class="form-control" id="latReq" name="lat" step="any" min="-90" max="90">
      </div>
      <div class="form-group col-md-5">
        <label for="lon">Longitude:</label>
        <input type="number" class="form-control" id="lonReq" name="lon" step="any" min="-180" max="180">
      </div>
      <div class='col-md-2'>
        <label for="location">Locate?</label>
        <button type="button" id="locBtn" class="btn btn-dark">
          <i class="fas fa-map-marked-alt fa-lg"></i>
        </button>
      </div>
    </div>
    {{#if message}}
  <div class="error-message">{{ message }}</div>
  {{/if}}
    <button type="submit" class="btn btn-primary">Enter</button>
  </form>
</div>
