<link rel='stylesheet' href='/stylesheets/auth.css' />


<form class="form-signin bg-light rounded shadow text-center" action="/signup" method="POST">
  <img class="mb-4" src="images/ticket_dodger_icon.png" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal">Signup</h1>
  <label for="username" class="sr-only">Username</label>
  <input type="username" class="form-control" placeholder="Username" name="username" required="" autofocus="">
  <label for="password" class="sr-only">Password</label>
  <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required="">
  <div class="error-message">{{ message }}</div>
  <p class="account-message">
    Have an account?
    <a href="/login">Login</a>
  </p>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Create account</button>
</form>
